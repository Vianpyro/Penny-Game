{
    "name": "Lean Agile - Penny Game",
    "image": "ghcr.io/vianpyro/penny-game-devcontainer:latest",
    "customizations": {
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
        },
        "vscode": {
            "extensions": [
                "astro-build.astro-vscode",
                "esbenp.prettier-vscode",
                "gruntfuggly.triggertaskonsave",
                "ms-python.black-formatter",
                "ms-python.python",
                "ms-python.isort"
            ]
        }
    },
    "forwardPorts": [
        8000,
        4321
    ],
    "otherPortsAttributes": {
        "onAutoForward": "ignore"
    },
    "postStartCommand": {
        "installPythonRequirements": "pip3 install --user -r api/requirements-dev.txt",
        "installNpmDependencies": "npm install --prefix front-end"
    },
    "postAttachCommand": "",
    "remoteUser": "vscode"
}
