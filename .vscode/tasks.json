{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Delete old Git branches",
            "type": "shell",
            "command": "git fetch --prune && git fetch -p ; git branch -r | awk '{print $1}' | egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk '{print $1}' | xargs git branch -D",
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "Start FastAPI server",
            "type": "shell",
            "command": "uvicorn app.main:app --host 0.0.0.0",
            "presentation": {
                "panel": "dedicated",
                "close": true
            },
            "options": {
                "cwd": "${workspaceFolder}/api",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/api"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Prettify All Files",
            "type": "shell",
            "command": "npx prettier --write .",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "close": true
            },
            "options": {
                "cwd": "${workspaceFolder}/front-end"
            },
            "problemMatcher": []
        },
        {
            "label": "Prettify Current File",
            "type": "shell",
            "command": "npx prettier --write ${file}",
            "presentation": {
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/front-end"
            },
            "problemMatcher": []
        }
    ]
}
