    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/api",
            "jinja": true
        },
        {
            "name": "Development server",
            "type": "node-terminal",
            "request": "launch",
            "command": "./node_modules/.bin/astro dev",
            "cwd": "${workspaceFolder}/front-end",
        }
    ]
}
