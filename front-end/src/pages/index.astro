---
import '../styles/main.css'
import '../styles/index.css'
import '../styles/game-board.css'
import Main from '../layouts/Main.astro'
import JoinRole from '../components/JoinRole.astro'
import PlayerSelector from '../components/PlayerSelector.astro'
import Rules from '../components/Rules.astro'
import GameInfo from '../components/GameInfo.astro'
import RoundSelector from '../components/RoundSelector.astro'
import GameControls from '../components/GameControls.astro'
import Results from '../components/Results.astro'
import { SITE_NAME, MAX_PLAYERS } from '../config.js'

let showJoinRole = true
---

<Main title={SITE_NAME}>
    <JoinRole visible={showJoinRole} />
    <div class="container">
        <h1><span class="flip" id="coinFlip">ðŸª™</span> Penny Game</h1>
        <p class="subtitle">Simulation Lean - Mesure du Flow et du Lead Time</p>

        <div class="game-setup">
            <div class="setup-controls">
                <PlayerSelector />

                <GameInfo />

                <RoundSelector />

                <Rules />
            </div>
        </div>

        <GameControls />

        <div class="game-board" id="gameBoard" style="display: none;">
            <!-- Game board content will be dynamically generated by JavaScript -->
        </div>

        <Results />
    </div>
</Main>

<script type="module" src="scripts/main.js"></script>

<style>
    /* Additional styles for the updated page */
    .game-rules-details {
        margin-top: 15px;
        background: rgb(255 255 255 / 70%);
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #f39c12;
    }

    .game-rules-details ul {
        margin: 0;
        padding-left: 20px;
    }

    .game-rules-details li {
        margin-bottom: 8px;
        line-height: 1.4;
    }

    .config-display {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
        flex-wrap: wrap;
    }

    .config-item {
        background: rgb(52 152 219 / 10%);
        padding: 10px 15px;
        border-radius: 20px;
        border: 2px solid rgb(52 152 219 / 20%);
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .config-label {
        font-weight: 600;
        color: #2c3e50;
    }

    .config-value {
        font-weight: 700;
        color: #3498db;
        background: rgb(255 255 255 / 80%);
        padding: 2px 8px;
        border-radius: 10px;
        min-width: 20px;
        text-align: center;
    }

    .round-info {
        background: rgb(155 89 182 / 10%);
        padding: 12px;
        border-radius: 8px;
        border-left: 4px solid #9b59b6;
    }

    .round-info p {
        margin: 0;
        font-size: 0.95em;
        line-height: 1.4;
        color: #2c3e50;
    }

    .results-actions {
        margin-top: 30px;
        text-align: center;
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .results-actions .btn {
        min-width: 140px;
    }

    .btn-secondary {
        background: linear-gradient(45deg, #95a5a6, #7f8c8d);
        color: #fff;
    }

    .btn-secondary:hover {
        box-shadow: 0 8px 20px rgb(149 165 166 / 30%);
        transform: translateY(-2px);
    }

    .keyboard-hint {
        position: fixed;
        bottom: 20px;
        left: 20px;
        background: rgb(0 0 0 / 80%);
        color: white;
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 0.9em;
        z-index: 1000;
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .game-board:hover .keyboard-hint {
        opacity: 0.9;
    }

    @media screen and (max-width: 768px) {
        .config-display {
            justify-content: center;
        }

        .results-actions {
            flex-direction: column;
            align-items: center;
        }

        .results-actions .btn {
            width: 100%;
            max-width: 200px;
        }

        .keyboard-hint {
            display: none;
        }
    }
</style>
