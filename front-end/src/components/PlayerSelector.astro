    <div class="player-buttons" id="playerButtons">
        {
            Array.from({ length: MAX_PLAYERS - 1 }, (_, i) => {
                const count = i + 2
                return (
                    <button class={`player-count-btn${count === MAX_PLAYERS ? ' active' : ''}`} data-count={count}>
                        {count} Joueurs
                    </button>
                )
            })
        }
    </div>
    <div class="player-list">
