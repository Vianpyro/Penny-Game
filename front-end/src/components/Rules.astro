        font-size: 0.95em;
        line-height: 1.4;
        margin-bottom: 8px;
    }

    .config-badge {
        background: rgb(52 152 219 / 20%);
        color: #2980b9;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.85em;
        font-weight: 600;
        display: inline-block;
        margin: 2px 4px 2px 0;
    }

    .config-note {
        margin: 0;
        font-size: 0.8em;
        color: #7f8c8d;
        font-style: italic;
    }

    .rules {
        background: rgb(255 255 255 / 95%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 25px rgb(0 0 0 / 10%);
        border-left: 5px solid #3498db;
        max-height: 70vh;
        overflow-y: auto;
    }

    .rules h3 {
        margin: 0 0 20px 0;
        color: #2c3e50;
        font-size: 1.4em;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .rules-overview {
        background: rgb(52 152 219 / 10%);
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
        border-left: 4px solid #3498db;
    }

    .rules-overview p {
        margin: 0;
        font-size: 1.05em;
        line-height: 1.5;
        color: #2c3e50;
    }

    .rules-sections {
        display: grid;
        gap: 15px;
        margin-bottom: 20px;
    }

    .rule-section {
        background: rgb(236 240 241 / 30%);
        padding: 15px;
        border-radius: 10px;
        border-left: 3px solid #95a5a6;
    }

    .rule-section.cooperative {
        background: rgb(46 204 113 / 10%);
        border-left-color: #27ae60;
    }

    .rule-section h4 {
        margin: 0 0 10px 0;
        color: #2c3e50;
        font-size: 1.1em;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .rule-section p {
        margin: 0;
        color: #34495e;
        line-height: 1.4;
        font-size: 0.95em;
    }

    .rule-section ul {
        margin: 5px 0 0 0;
        padding-left: 20px;
        list-style: none;
    }

    .rule-section li {
        margin-bottom: 6px;
        color: #34495e;
        font-size: 0.95em;
        line-height: 1.4;
        position: relative;
        padding-left: 15px;
    }

    .rule-section li::before {
        content: '‚ñ∏';
        position: absolute;
        left: 0;
        color: #3498db;
        font-weight: bold;
    }

    .lean-insights {
        background: rgb(241 196 15 / 10%);
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #f1c40f;
    }

    .lean-insights h4 {
        margin: 0 0 15px 0;
        color: #2c3e50;
        font-size: 1.1em;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .insights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
    }

    .insight-card {
        background: rgb(255 255 255 / 80%);
        padding: 12px;
        border-radius: 8px;
        border: 1px solid rgb(241 196 15 / 30%);
        text-align: center;
    }

    .insight-card strong {
        display: block;
        color: #f39c12;
        font-size: 1em;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .insight-card p {
        margin: 0;
        color: #7f8c8d;
        font-size: 0.85em;
        line-height: 1.3;
    }

    @media screen and (max-width: 768px) {
        .rules {
